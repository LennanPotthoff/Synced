<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3DAC9"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <info.hoang8f.widget.FButton
        android:id="@+id/connect_button"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="connect"
        android:textColor="#ffffff"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/customEditText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/customEditText"
        app:layout_constraintTop_toBottomOf="@+id/customEditText"
        app:layout_constraintVertical_bias="0.164" />

    <com.libizo.CustomEditText
        android:id="@+id/customEditText"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="5dp"
        android:maxEms="12"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/_15sdp"
        app:libIZO_setPrefix="IP: "
        android:hint="192.168.1.1"
        app:libIZO_setBackgroundColor="#4DCCBD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/desktop"
        app:layout_constraintStart_toStartOf="@+id/desktop"
        app:layout_constraintTop_toBottomOf="@+id/desktop"
        app:layout_constraintVertical_bias="0.37"
        app:libIZO_clearIconTint="#4DCCBD"
        app:libIZO_setBorderColor="#ffffff"
        app:libIZO_setBorderView="true"
        app:libIZO_setClearIconVisible="true"
        app:libIZO_setCornerRadius="500dp"
        app:libIZO_setPrefixTextColor="#ffffff"
        app:libIZO_setStrokeWidth="2dp" />

    <ImageView
        android:id="@+id/desktop"
        android:layout_width="@dimen/_136sdp"
        android:layout_height="@dimen/_106sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263"
        app:srcCompat="@drawable/desktopclipped" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/quickSync_button"
        android:layout_width="@dimen/_165sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0"
        android:visibility="gone"
        android:onClick="startQuickSync"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desktop"
        app:layout_constraintVertical_bias="0.22000003"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_defaultColor="#4DCCBD"
        fancy:fb_borderWidth="@dimen/_2sdp"
        fancy:fb_focusColor="#4DCCBD"
        fancy:fb_iconPosition="right"
        fancy:fb_iconResource="@drawable/colorsample"
        fancy:fb_radius="@dimen/_200sdp"
        fancy:fb_text="QUICK SYNC"
        fancy:fb_textColor="#000" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/explore_button"
        android:layout_width="@dimen/_165sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textSize="@dimen/_18sdp"
        android:onClick="startExploring"
        android:textStyle="bold"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quickSync_button"
        app:layout_constraintVertical_bias="0.100000024"
        fancy:fb_iconResource="@drawable/colorsample"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="@dimen/_2sdp"
        fancy:fb_defaultColor="#4DCCBD"
        fancy:fb_focusColor="#4DCCBD"
        fancy:fb_iconPosition="right"
        fancy:fb_radius="@dimen/_200sdp"
        fancy:fb_text="EXPLORE"
        fancy:fb_textColor="#000" />

    <ImageView
        android:id="@+id/cancelCross"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/loading_button"
        app:layout_constraintEnd_toEndOf="@+id/loading_button"
        app:layout_constraintStart_toStartOf="@+id/loading_button"
        app:layout_constraintTop_toTopOf="@+id/loading_button"
        app:srcCompat="@drawable/cross" />

    <com.ekalips.fancybuttonproj.FancyButton
        android:id="@+id/loading_button"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:f_btnStyle="stroke_fill"
        app:f_fillColor="#E3DAC9"
        app:f_hideFillAfterCollapse="false"
        app:f_progressColor="#000000"
        app:f_strokeColor="#E3DAC9"
        app:f_text="Connect"
        app:f_textColor="#000"
        app:f_textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toEndOf="@+id/loading_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433"
        app:srcCompat="@drawable/phone" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/loading_bar"
        style="@style/SpinKitView.Large.ThreeBounce"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:alpha="0"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:SpinKit_Color="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/desktop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <ImageView
        android:id="@+id/binoculars"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/explore_button"
        app:layout_constraintEnd_toEndOf="@+id/explore_button"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/explore_button"
        app:layout_constraintTop_toTopOf="@+id/explore_button"
        fancy:srcCompat="@drawable/binoculars" />

    <ImageView
        android:id="@+id/sync"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:alpha="0"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/quickSync_button"
        app:layout_constraintEnd_toEndOf="@+id/quickSync_button"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/quickSync_button"
        app:layout_constraintTop_toTopOf="@+id/quickSync_button"
        app:layout_constraintVertical_bias="0.3"
        fancy:srcCompat="@drawable/sync" />



</android.support.constraint.ConstraintLayout>